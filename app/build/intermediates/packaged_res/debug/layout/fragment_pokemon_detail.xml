<?xml version="1.0" encoding="utf-8"?>
<!-- Layout para mostrar el detalle completo de un Pokémon -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Imagen grande del Pokémon -->
        <ImageView
            android:id="@+id/ivDetailImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_launcher" />

        <!-- Nombre del Pokémon -->
        <TextView
            android:id="@+id/tvDetailName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:text="Nombre" />

        <!-- Contenedor para mostrar los tipos del Pokémon -->
        <LinearLayout
            android:id="@+id/llDetailTypes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp" />

        <!-- Botón para añadir o eliminar de favoritos -->
        <Button
            android:id="@+id/btnAFavoritos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Añadir a Favoritos"
            android:backgroundTint="#FFD700"
            android:textColor="#000000"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <!-- Peso -->
            <TextView
                android:id="@+id/tvDetailWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Peso: 0kg" />

            <!-- Altura -->
            <TextView
                android:id="@+id/tvDetailHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Altura: 0m" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estadísticas:"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"/>

        <!-- Estadísticas base -->
        <TextView
            android:id="@+id/tvDetailStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stats..." />

    </LinearLayout>
</ScrollView>
